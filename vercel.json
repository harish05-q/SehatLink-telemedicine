{
  "version": 2,
  "builds": [
    {
      "src": "/server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "/client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "/server/index.js"
    },
    {
      "source": "/:match*",
      "destination": "/client/build/index.html"
    }
  ]
}